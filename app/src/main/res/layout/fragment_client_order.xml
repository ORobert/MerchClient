<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:orientation="horizontal" android:weightSum="1" android:columnCount="7" android:rowCount="2"
            android:padding="0dp" android:layout_margin="0dp" android:layout_height="60dp">

    <TextView
            android:id="@+id/id"
            android:layout_width="57dp" android:maxWidth="57dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Id: 1000"
            android:layout_row="0" android:layout_column="0"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="7dp" android:layout_marginTop="10dp"/>
    <View
            android:layout_width="2dp" android:layout_column="1" android:layout_row="0"
            android:layout_rowSpan="2"
            android:background="@color/colorPrimary" android:elevation="1dp" android:layout_height="20dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:id="@+id/status"
            android:layout_width="118dp" android:maxWidth="118dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="In curs de livrare" android:layout_row="0"
            android:layout_column="2" android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp" android:layout_marginTop="10dp"/>
    <View
            android:layout_width="2dp" android:layout_column="3" android:layout_row="0"
            android:layout_rowSpan="2"
            android:background="@color/colorPrimary" android:elevation="1dp" android:layout_height="20dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="01.01.2017" android:maxWidth="85dp"
            android:layout_row="0" android:layout_column="4"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp" android:layout_marginTop="10dp"
            android:layout_height="wrap_content" android:id="@+id/date"
            android:layout_width="85dp"/>
    <View
            android:layout_width="2dp" android:layout_column="5" android:layout_row="0"
            android:layout_rowSpan="2"
            android:background="@color/colorPrimary" android:elevation="1dp" android:layout_height="50dp"
            android:layout_marginTop="5dp"/>
    <Button
            android:button="@null" android:background="@drawable/btn_round_large"
            android:id="@+id/button" android:text="Detalii" android:textStyle="bold"
            android:contextClickable="false" android:layout_row="0" android:layout_column="6"
            android:layout_rowSpan="2" android:layout_gravity="center"
            android:layout_margin="0dp" android:padding="0dp" android:layout_width="wrap_content" android:layout_height="40dp"
            android:checked="false" android:textColor="@android:color/white"/>
    <LinearLayout
            android:orientation="horizontal" android:layout_column="0" android:layout_row="1"
            android:layout_width="wrap_content" android:layout_columnSpan="6"
            android:layout_height="wrap_content" android:id="@+id/layout_hor">
        <TextView
                android:text="Nr. de produse: 9000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/prodNo"
                android:layout_marginBottom="2dp" android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginRight="7dp" android:layout_marginTop="4dp"
        />
        <View
                android:layout_width="2dp" android:id="@+id/emp_sp"
                android:background="@color/colorPrimary" android:elevation="1dp" android:layout_height="18dp"
                android:layout_marginTop="4dp"/>
        <TextView
                android:text="Oras: Nume de Oras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/city"
                android:layout_marginBottom="2dp" android:layout_marginLeft="7dp"
                android:layout_marginRight="0dp" android:layout_marginTop="4dp"
        />
    </LinearLayout>
</GridLayout>
