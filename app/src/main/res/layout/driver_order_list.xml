<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/tools" xmlns:app2="http://schemas.android.com/apk/res-auto"
                android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:orientation="vertical">
    <Button
            android:text="Spre Livrare!"
            android:layout_width="match_parent"
            android:id="@+id/button" android:layout_weight="1" android:layout_marginTop="10dp"
            android:layout_height="50dp" android:maxLines="1" android:textAllCaps="false" android:padding="10dp"
            android:background="@drawable/btn_round_large"
            android:textColor="#ffffff" android:textSize="20sp" android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginBottom="10dp"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:name="com.example.orobe.merch.DOrderFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_above="@+id/button"
            app:layoutManager="LinearLayoutManager"
            app:context="com.example.orobe.merch.DOrderFragment"
            app:listitem="@layout/fragment_driverorder">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
