<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:orientation="horizontal" android:columnCount="5" android:rowCount="2"
            android:padding="0dp" android:layout_margin="0dp" android:layout_height="60dp">

    <TextView
            android:id="@+id/id"
            android:layout_width="68dp" android:maxWidth="68dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem" android:text="Id: 10000"
            android:layout_row="0" android:layout_column="0" android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="7dp" android:layout_marginTop="10dp"/>
    <View
            android:layout_width="2dp" android:layout_column="1" android:layout_row="0"
            android:background="@color/colorPrimary" android:elevation="1dp" android:layout_height="20dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:id="@+id/content"
            android:layout_width="131dp" android:maxWidth="131dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem" android:text="Username"
            android:layout_row="0" android:layout_column="2" android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp" android:layout_marginTop="10dp"/>
    <View
            android:layout_width="2dp" android:layout_column="3" android:layout_row="0"
            android:layout_rowSpan="2"
            android:background="@color/colorPrimary" android:elevation="1dp" android:layout_height="50dp"
            android:layout_marginTop="5dp"/>
    <Button
            android:text="Livreaza" android:layout_column="4" android:layout_row="0" android:layout_rowSpan="2"
            android:layout_width="121dp" android:gravity="center" android:layout_gravity="center"
            android:layout_height="40dp" android:id="@+id/button"
            android:background="@drawable/btn_round_large" android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium" android:textSize="14sp"
            android:textStyle="normal|bold" android:textAlignment="center"/>
    <RelativeLayout
            android:layout_width="269dp" android:layout_row="1" android:layout_column="0"
            android:layout_columnSpan="3" android:layout_height="24dp"
            android:gravity="center_vertical">
        <TextView
                android:text="Numar de produse: 1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/prodNo" android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="7dp" android:layout_marginTop="4dp"/>
        <View
                android:layout_width="2dp" android:id="@+id/emp_sp"
                android:background="@color/colorPrimary" android:elevation="1dp" android:layout_height="18dp"
                android:layout_marginTop="4dp" android:layout_toEndOf="@id/prodNo"/>
        <TextView
                android:text="01.01.2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginLeft="2dp"
                android:id="@+id/date" android:layout_alignParentTop="true" android:layout_toEndOf="@+id/emp_sp"
                android:paddingLeft="7dp"/>
    </RelativeLayout>
</GridLayout>
